<?xml version="1.0"?>

<layout version="0.1.0">
    <order_adminhtml_cart_index>
        <reference name="content">
            <block type="order/adminhtml_cart" template="order/adminhtml/cart.phtml" name="cart">
                <block type="order/adminhtml_cart_account" template="order/adminhtml/cart/account.phtml" name="account"/>

                <block type="order/adminhtml_cart_product" name="product">
                </block>

                <block type="order/adminhtml_cart_item" template="order/adminhtml/cart/item.phtml" name="item"/>
                <block type="order/adminhtml_cart_payment" template="order/adminhtml/cart/payment.phtml" name="payment"/>
                <block type="order/adminhtml_cart_shipping" template="order/adminhtml/cart/shipping.phtml" name="shipping"/>
                <block type="order/adminhtml_cart_billingAddress" template="order/adminhtml/cart/billingAddress.phtml" name="billingAddress"/>
                <block type="order/adminhtml_cart_shippingAddress" template="order/adminhtml/cart/shippingAddress.phtml" name="shippingAddress"/>
                <block type="order/adminhtml_cart_total" template="order/adminhtml/cart/total.phtml" name="total"/>
            </block>
        </reference>
    </order_adminhtml_cart_index>



    <order_adminhtml_order_new>        <!--RCA-->
        <reference name="root">
            <block type="order/adminhtml_order_create" name="content">
                <block type="order/adminhtml_order_create_form" template="order/create/form.phtml" name="form">
                    <block type="order/adminhtml_order_create_customer" template="order/create/abstract.phtml" name="customer">
                        <block type="order/adminhtml_order_create_customer_grid" name="grid" />
                    </block>
                </block>
            </block>
        </reference>
    </order_adminhtml_order_new>

    <order_adminhtml_order_one>
        <reference name="content">
            <block type="order/adminhtml_order_create_data" template="order/create/data.phtml" name="data">
                <block type="order/adminhtml_order_create_form_account" template="order/create/form/account.phtml" name="form_account" />

                <block type="order/adminhtml_order_create_shipping_address" template="order/create/form/address.phtml" name="shipping_address" />
                <block type="order/adminhtml_order_create_billing_address" template="order/create/form/address.phtml" name="billing_address" />
                <block type="order/adminhtml_order_create_shipping_method" template="order/create/abstract.phtml" name="shipping_method">
                    <block type="order/adminhtml_order_create_shipping_method_form" template="order/create/shipping/method/form.phtml" name="form" />
                </block>
                <block type="order/adminhtml_order_create_billing_method" template="order/create/abstract.phtml" name="billing_method">
                    <block type="order/adminhtml_order_create_billing_method_form" template="order/create/billing/method/form.phtml" name="form" />
                </block>
                <block type="order/adminhtml_order_create_items" template="order/create/items.phtml" name="items">
                    <block type="order/adminhtml_order_create_items_grid" template="order/create/items/grid.phtml" name="items_grid"/>
                </block>
            </block>
        </reference>

        <reference name="content">
            <block type="order/adminhtml_order_product" template="order/product/form.phtml" name="product">
                <block type="order/adminhtml_order_product_grid" name="product_grid" />
            </block>
        </reference>
    </order_adminhtml_order_one>
</layout>