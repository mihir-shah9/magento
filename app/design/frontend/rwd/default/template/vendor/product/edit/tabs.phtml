<?php $this->prepareTab(); ?>
<?php $tabs = $this->getTabs(); ?>

<?php foreach ($tabs as $key => $tab) : ?>
    <div class="tab">
        <button class="button tabButton" id="<?php echo $key ?>" onclick="getTabContent(this)"> <?php echo $tab['label']; ?></button> <br>
    </div>
<?php endforeach; ?>

<script type="text/javascript">
    var tabId;
    var tabsData = <?php echo json_encode($tabs) ?>;
    getTabContent(null, 'group_25');

    function getTabContent(tab, optional = null) {
        if (optional) {
            tabId = optional;
        } else {
            tabId = tab.id;
        }
        div = document.createElement('div');
        div.id = 'content_' + tabId;
        jQuery(div).addClass('tabContent');
        if (!document.getElementById(div.id)) {
            document.getElementById('vendorProductForm').appendChild(div);
            document.getElementById(div.id).innerHTML = tabsData[tabId]['content'];
        }
        jQuery('.tabContent').hide();
        jQuery('#' + div.id).show();

        jQuery('.tabButton').addClass('inactive');
        jQuery('#' + tabId).addClass('active');
        jQuery('#' + tabId).removeClass('inactive');
    }
</script>
<style type="text/css">
    .inactive {
        background: #9cbdd4;
        border: none;
        margin-bottom: 5px;
        padding: 5px;
        width: 150px;
        color: white;
    }

    .active {
        background: #00000000;
        border: none;
        margin-bottom: 5px;
        padding: 5px;
        width: 150px;
        color: black;
    }
</style>