<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <Ccc_Order>
            <version>0.1.2</version>
        </Ccc_Order>
    </modules>

    <admin>
        <routers>
            <order>
                <use>admin</use>
                <args>
                    <module>Ccc_Order</module>
                    <frontName>order</frontName>
                </args>
            </order>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <order module="order">
                <title>Order</title>
                <sort_order>150</sort_order>
                <action>order/adminhtml_order</action>
            </order>
        </menu>

        <layout>
            <updates>
                <order>
                    <file>order.xml</file>
                </order>
            </updates>
        </layout>
    </adminhtml>

    <global>
        <helpers>
            <order>
                <class>Ccc_Order_Helper</class>
            </order>
        </helpers>

        <blocks>
            <order>
                <class>Ccc_Order_Block</class>
            </order>
        </blocks>

        <resources>
            <order_setup>
                <setup>
                    <module>Ccc_Order</module>
                </setup>
            </order_setup>
        </resources>

        <models>
            <order>
                <class>Ccc_Order_Model</class>
                <resourceModel>order_resource</resourceModel>
            </order>

            <customer>
                <rewrite>
                    <customer>Ccc_Order_Model_Customer</customer>
                </rewrite>
            </customer>

            <order_resource>
                <class>Ccc_Order_Model_Resource</class>
                <entities>
                    <cart>
                        <table>cart</table>
                    </cart>

                    <cart_address>
                        <table>cart_address</table>
                    </cart_address>

                    <cart_item>
                        <table>cart_item</table>
                    </cart_item>

                    <order>
                        <table>order</table>
                    </order>

                    <order_address>
                        <table>order_address</table>
                    </order_address>

                    <order_item>
                        <table>order_item</table>
                    </order_item>
                </entities>
            </order_resource>
        </models>
    </global>
</config>